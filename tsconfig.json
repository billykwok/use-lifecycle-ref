{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "skipLibCheck": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "ES2015",
    "moduleResolution": "node"
  },
  "include": ["**/*.ts"],
  "exclude": ["types/*.d.ts", "node_modules"]
}
